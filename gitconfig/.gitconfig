[diff]
    colorMoved = default
    colorMovedWS = allow-indentation-change
    wsErrorHighlight = old

[branch]
    autoSetupMerge = true # this is the default
    autoSetupRebase = always

[color]
    branch = auto
    diff = auto
    status = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

; Highlight whitespace in diffs
[color]
    ui = true

[core]
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
    autocrlf = input
    quotepath = false
    excludesfile = /Users/dentarg/.gitignore_global

[alias]
    p  = pull
    st = status
    ci = commit -v
    br = branch
    co = checkout
    df = diff
    lg = log -p
    rma = !git rm $(git ls-files --deleted)
    cia = !git ci -v --amend
    co-pr = !sh -c 'git fetch origin pull/$1/head:pr/$1 && git checkout pr/$1' -
    d   = diff
    dc  = diff --cached
    g   = log --graph --pretty=custom               # Show custom graph
    l   = log --pretty=custom                       # Show custom log
    lc  = shortlog --summary --numbered             # List contributors

    # print tags with commit, from https://stackoverflow.com/a/25777221/525616
    tags  = log --no-walk --tags --pretty=custom --decorate=full

    # List remote branches
    lrb = "!f() { \
        remote="${1:-origin}"; \
        git ls-remote --heads "$remote"; \
    }; f"

    # List tags sorted, from https://stackoverflow.com/a/36636526/525616
    sorted-tags = "!f() { \
        git tag --sort=-creatordate --list --format='%(creatordate:short) %(objectname:short) %(refname:strip=2)'; \
    }; f"

[push]
    trustExitCode = true
    default = current

[credential]
    helper = osxkeychain

[filter "media"]
    required = true
    clean = git media clean %f
    smudge = git media smudge %f

[svn]
    rmdir = true

# from https://github.com/alrra/dotfiles/blob/e5977d47b68b69d155142c94b531a086d35406e6/git/gitconfig
[pretty]
    custom = "%C(magenta)%h%C(red)%d %C(yellow)%ar %C(green)%s %C(yellow)(%an)"
    #                     │        │            │            │             └─ author name
    #                     │        │            │            └─ message
    #                     │        │            └─ date (relative)
    #                     │        └─ decorations (branch, heads or tags)
    #                     └─ hash (abbreviated)

[fetch]
    prune = true

[commit]
    cleanup = scissors

[init]
    defaultBranch = main
